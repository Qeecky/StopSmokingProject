<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".MainActivity">



    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="350sp"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <TextView
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:text="Вы не курили уже"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="40sp"
        android:text="Денег сэкономлено"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/fordays"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:textSize="40sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="90sp"
        android:layout_marginRight="225sp"
        android:text="Дней"
        android:textColor="@color/white"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340sp"
        android:layout_marginTop="90sp"
        android:text="Руб"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/formoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200sp"
        android:layout_marginRight="80sp"
        android:layout_marginTop="90sp"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/testbutton"
        android:layout_width="115dp"
        android:layout_height="78dp"
        android:layout_centerInParent="true"
        android:text="Я СЕГОДНЯ НЕ КУРИЛ" />
    <Button
        android:layout_width="130dp"
        android:layout_height="78dp"
        android:layout_below="@+id/testbutton"
        android:layout_centerInParent="true"
        android:id="@+id/powerlessbutton"
        android:text="Я НЕ ВЫДЕРЖАЛ"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/achivments"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500sp"
        android:text="Достижения"
        android:layout_marginHorizontal="50sp"
        android:textSize="20sp"/>

</RelativeLayout>

